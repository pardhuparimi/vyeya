{
  "name": "vyeya-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules packages/*/node_modules",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter server build",
    "build:shared": "pnpm --filter shared build",
    "build:app": "pnpm --filter app build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:e2e": "pnpm --filter app test:e2e",
    "test:ci": "pnpm --filter server test:ci",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "lint:check": "cd packages/server && pnpm run lint:strict && cd ../app && pnpm run lint",
    "lint:fix": "pnpm -r lint:fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "pnpm -r type-check",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:seed": "pnpm --filter server db:seed",
    "docker:build": "docker build -t vyeya-api -f packages/server/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 vyeya-api",
    "infra:init": "cd infrastructure && terraform init",
    "infra:plan": "cd infrastructure && terraform plan",
    "infra:apply": "cd infrastructure && terraform apply",
    "infra:destroy": "cd infrastructure && terraform destroy",
    "infra:plan:dev": "cd infrastructure && terraform plan -var-file=environments/dev.tfvars",
    "infra:plan:qa": "cd infrastructure && terraform plan -var-file=environments/qa.tfvars",
    "infra:plan:prod": "cd infrastructure && terraform plan -var-file=environments/prod.tfvars",
    "infra:apply:dev": "cd infrastructure && terraform apply -var-file=environments/dev.tfvars",
    "infra:apply:qa": "cd infrastructure && terraform apply -var-file=environments/qa.tfvars",
    "infra:apply:prod": "cd infrastructure && terraform apply -var-file=environments/prod.tfvars",
    "security:audit": "pnpm audit --audit-level high",
    "security:scan": "docker run --rm -v $(pwd):/app aquasec/trivy fs /app",
    "load:test": "k6 run packages/server/k6-load-test.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "env:check": "./scripts/check-local-env.sh",
    "env:setup": "./scripts/production-setup.sh",
    "aws:setup": "./scripts/aws-quick-setup.sh",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "mobile:build:android": "cd packages/app && fastlane android build_debug",
    "mobile:build:ios": "cd packages/app && fastlane ios build_debug",
    "mobile:beta:android": "cd packages/app && fastlane android beta",
    "mobile:beta:ios": "cd packages/app && fastlane ios beta",
    "mobile:release:android": "cd packages/app && fastlane android release",
    "mobile:release:ios": "cd packages/app && fastlane ios release",
    "mobile:test": "cd packages/app && fastlane test",
    "ci:quality-gate": "pnpm run lint:check && pnpm run format:check && pnpm run type-check && pnpm run test:unit && pnpm run security:audit",
    "ci:integration": "pnpm run test:integration",
    "ci:e2e": "pnpm run test:e2e",
    "ci:build-mobile": "pnpm run mobile:build:android && pnpm run mobile:build:ios",
    "ci:beta": "pnpm run mobile:beta:android && pnpm run mobile:beta:ios",
    "ci:release": "pnpm run mobile:release:android && pnpm run mobile:release:ios"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "typescript": "^5.0.4",
    "eslint": "^8.57.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "dependencies": {
    "expo": "~53.0.20",
    "react": "19.0.0",
    "react-native": "0.79.5"
  }
}
